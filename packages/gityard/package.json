{
  "name": "gityard",
  "version": "0.1.5",
  "description": "CLI and ESM module for managing Git worktrees with ease.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "gityard": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "bun src/cli.tsx",
    "build": "bun build src/cli.tsx --outdir dist --target bun --external react-devtools-core && bun build src/index.ts --outdir dist --target bun --external react-devtools-core && cp package.json dist/package.json",
    "test": "bun test",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "release": "bunx standard-version",
    "release:patch": "bunx standard-version --release-as patch",
    "release:minor": "bunx standard-version --release-as minor",
    "release:major": "bunx standard-version --release-as major",
    "release:rc": "bunx standard-version --prerelease rc",
    "gityard": "bun src/cli.tsx"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "git-worktree"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "inquirer": "^12.4.1",
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.35.0"
  }
}
