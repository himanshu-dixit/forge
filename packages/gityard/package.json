{
  "name": "gityard",
  "version": "0.1.0",
  "description": "CLI and ESM module for managing Git worktrees with ease.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "gityard": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun && bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "release": "bunx standard-version",
    "release:patch": "bunx standard-version --release-as patch",
    "release:minor": "bunx standard-version --release-as minor",
    "release:major": "bunx standard-version --release-as major",
    "release:rc": "bunx standard-version --prerelease rc"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "git-worktree"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.35.0"
  }
}
