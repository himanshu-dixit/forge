#!/usr/bin/env bash
# Local gityard runner - mimics npx behavior for testing
# Usage: ./gityard-local [command] [args...]

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Run the CLI using bun without changing directory
# This ensures process.cwd() remains the user's current directory
exec bun "$SCRIPT_DIR/src/cli.tsx" "$@"
